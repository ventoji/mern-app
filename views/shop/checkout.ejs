<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart-item.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <main>
            <ul class="cart-item">
                <% products.forEach(p => { %>
                    <li class="cart-item__unique" >
                        <h1><%= p.productId.title %> </h1>
                        <h2> <%= p.quantity %></h2>
                    </li>
                <% }) %>
            </ul>
            <div class="centered"> <h2> Total: <%= totalSum  %></h2></div>
            <div> 
                <form action="/create-order" method="POST">
                    <script
                      src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="sk_test_sQwtS2znrs2E0aaSBVFshaES00pfPPO10G"
                      data-amount="<%= totalSum * 100 %>"
                      data-name="Your Order"
                      data-description="All the items you ordewred"
                      data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                      data-locale="auto"
                      data-currency="usd">
                    </script>
                  </form>
            </div>
        </main>

<%- include('../includes/end.ejs') %>