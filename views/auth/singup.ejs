<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form-product.css">
</head>

<body>

    <%- include('../includes/navigation.ejs') %>

    <main class="login-page">
        <% if(errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %> </div>
            <%   } %>
        <form class="signup-form" action="/singup" method="POST" novalidate>
            <div class="form-control">
                <label for="email">Email</label>
                <input
                    class="<%= validationErrors.find(e => e.param==='email') ? 'invalid':'' %>" 
                    type="email" 
                    name="email" 
                    id="email" 
                    value="<%= oldInput.email %>"
                    >
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input
                class="<%= validationErrors.find(e => e.param==='password') ? 'invalid':'' %>" 
                    type="password" 
                    name="password" 
                    id="password"  
                    value=""
                    >
            </div>
            <div class="form-control">
                <label for="passwordConf">Confirm Password</label>
                <input
                class="<%= validationErrors.find(e => e.param==='passwordConf') ? 'invalid':'' %>" 
                    type="password" 
                    name="passwordConf" 
                    id="passwordConf"  
                    value=""
                    >
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
 <!--   <input type="hidden" value="" name="productId"> -->
            <button class="btn" type="submit"> Sign up </button>

        </form>
    </main>


    <%- include('../includes/end.ejs') %>